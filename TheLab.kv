<WidgetsExample>:
    cols: 3
    ToggleButton:
        text: "OFF"
        size_hint: None, 1
        width: "100dp"
        on_state: root.on_toggle_button_state(self)
    Button:
        text: "Count"
#        on_press: root.on_button_clicked()
        disabled: not root.count_enabled
    Label:
        text: root.my_text
        font_name: "fonts/Lcd.ttf"
        font_size: "80dp"
        color: 0, 1, 0, 1
    Switch:
        id: my_switch
        active: True
        size_hint: None, 1
        width: "100dp"
    Slider:
        id: my_slider
        disabled: not my_switch.active
        min: 0
        max: 100
        value: 50
        orientation: "vertical"
#        on_value: root.on_slider_value(self)
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: str(int(my_slider.value))
            font_name: "fonts/Lcd.ttf"
            font_size: "60dp"
            color: 0, 0, 1, 1
        ProgressBar:
            max: 100
            value: int(my_slider.value)

